{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "lib": ["ES6", "ES2015", "DOM"],
    "outDir": "lib",
    "rootDir": "src",
    "types": ["node", "jest"],
    "experimentalDecorators": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true
  },
  "exclude": ["node_modules", "lib"]
}
